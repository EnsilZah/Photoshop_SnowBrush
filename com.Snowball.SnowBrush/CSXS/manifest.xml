<?xml version="1.0" encoding="UTF-8"?>

<ExtensionManifest Version="6.0" ExtensionBundleId="com.Snowball.SnowBrush" ExtensionBundleVersion="0.6.0"
		ExtensionBundleName="Snowball" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<Author>
		<![CDATA[Tammuz Kay]]>
	</Author>	<ExtensionList>
		<Extension Id="com.Snowball.SnowBrush.panel" Version="0.6.0" />
	</ExtensionList>
	<ExecutionEnvironment>
		<HostList>
			<Host Name="PHSP" Version="15.0" />
			<Host Name="PHXS" Version="15.0" />
		</HostList>
		<LocaleList>
			<Locale Code="All" />
		</LocaleList>
		<RequiredRuntimeList>
			<RequiredRuntime Name="CSXS" Version="4.0" />

		</RequiredRuntimeList>
	</ExecutionEnvironment>
	<DispatchInfoList>
		<Extension Id="com.Snowball.SnowBrush.panel">
			<DispatchInfo >
				<Resources>
					<CEFCommandLine>
							<Parameter>--enable-nodejs</Parameter>
							<Parameter>--mixed-context</Parameter>
					</CEFCommandLine>

					<MainPath>./index.html</MainPath>
				</Resources>
				<Lifecycle>
					<AutoVisible>true</AutoVisible>
				</Lifecycle>
				<UI>
					<Type>Panel</Type>
					<Menu>SnowBrush</Menu>
					<Geometry>
						<Size>
							<Height>400</Height>
							<Width>400</Width>
						</Size>
					</Geometry>
					<Icons>
						<Icon Type="Normal">./images/Logo/Logo.png</Icon>
					</Icons>
				</UI>
			</DispatchInfo>
		</Extension>
	</DispatchInfoList>
</ExtensionManifest>